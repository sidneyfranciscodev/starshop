{% extends 'base.html.twig' %}

{% block title %}Starshop: Beam up some parts!{% endblock %}

{% block body %}
<main class="main-layout">
    {{ include('main/_shipStatusAside.html.twig') }}

    <div class="content">
        <h1>Ship Repair Queue</h1>
        <div class="queue">
        {% for ship in ships %}
            <div class="ship-item">
                <div class="ship-info">
                    <img src="{{ asset(ship.StatusImageFilename) }}" alt="Status: {{ ship.statusString }}">
                    <div class="ship-details">
                        <div class="status-badge">
                            <div class="status-dot"></div>
                            <p>{{ ship.statusString }}</p>
                        </div>
                        <h4>
                            <a href="{{ path('app_starship_show', { id: ship.id }) }}">{{ ship.name }}</a>
                        </h4>
                    </div>
                </div>
                <div class="ship-meta">
                    <div class="meta-item">
                        <p class="label">Captain</p>
                        <p class="value">{{ ship.captain }}</p>
                    </div>
                    <div class="meta-item">
                        <p class="label">Class</p>
                        <p class="value">{{ ship.class }}</p>
                    </div>
                </div>
            </div>
        {% endfor %}
        </div>

        <p class="browse">
            Looking for your next galactic ride?
            <a href="{{ path('app_main') }}">Browse the {{ ships|length * 10 }} starships for sale!</a>
        </p>
    </div>
</main>
{% endblock %}
